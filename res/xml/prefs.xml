<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <ListPreference android:key="lsystem"
    android:title="L-System"
    android:dialogTitle="Pick an L-System"
    android:entries="@array/pref_lsystem_entries"
    android:entryValues="@array/pref_lsystem_values"
    android:defaultValue="hilbert"></ListPreference>
  <EditTextPreference android:key="headcolor"
      android:title="Turtle Color"
      android:dialogTitle="Turtle Color (RGB; Hex)"
      android:defaultValue="FFFFFF"></EditTextPreference>
  <EditTextPreference android:key="tailcolor"
      android:title="Line Color"
      android:dialogTitle="Line Color (RGB; Hex)"
      android:defaultValue="444444"></EditTextPreference>
  <EditTextPreference android:key="bgcolor"
      android:title="Background Color"
      android:dialogTitle="Background Color (RGB; Hex)"
      android:defaultValue="AAAAAA"></EditTextPreference>
</PreferenceScreen> 